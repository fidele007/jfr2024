{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "JFR 2024",
  "version": "0.1.0",
  "identifier": "com.fidele007.jfr2024",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "JFR 2024",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost https://fonts.gstatic.com; img-src 'self' data: asset: http://asset.localhost https://services.y-congress.com; media-src 'self' asset: http://asset.localhost https://services.y-congress.com; style-src 'self' 'unsafe-inline' asset: https://fonts.googleapis.com",
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "offlineInstaller"
      }
    }
  }
}
